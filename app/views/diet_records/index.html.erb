<p id="notice"><%= notice %></p>

<%= render 'chart' %>

<table class="table table-hover">
  <thead>
    <tr>
      <th>日付</th>
      <th>体重</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @diet_records.each do |diet_record| %>
      <tr>
        <td style="width: 20%"><%= diet_record.title %></td>
        <td style="width: 20%"><%= diet_record.author %></td>
        <td style="width: 20%"><%= link_to '表示', diet_record %></td>
        <td style="width: 20%"><%= link_to '編集', edit_diet_record_path(diet_record) %></td>
        <td style="width: 20%"><%= link_to '削除', diet_record, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '記録する', new_diet_record_path, class: "btn btn-mini btn-primary" %>
